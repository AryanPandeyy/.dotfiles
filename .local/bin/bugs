# We have to run this only once.
update_vol
update_backlight
#print_volume

#display () { 
#	xsetroot -name "[ ï‹› $memory $cpu ] [ $vol ] $time"
#}
display () { 
	xsetroot -name "[ðŸŒ‹$memory ðŸ§ $cpu] [$backlight] [$vol] $time"
}

# Handling receiving signal
# RTMIN = 34 (always)
trap	"update_vol;display"	"RTMIN"
trap	"update_backlight;display" 	"RTMIN+1"
#trap	"display"	"RTMIN"

## kill -m "$(cat ~/.cache/pidofbar)"
# where m = 34 + n

while true
do
	sleep 1 &
  wait && { 
		# to update item ever n seconds with a offset of m
		## [ $((sec % n)) -eq m ] && udpate_item
		[ $((sec % 5 )) -eq 0 ] && update_time
		#[ $((sec % 5 )) -eq 0 ] && dwm_countdown
		[ $((sec % 15)) -eq 0 ] && update_memory
		[ $((sec % 15)) -eq 0 ] && update_cpu
		[ $((sec % 60)) -eq 0 ] && update_bat
		#[ $((sec % 60)) -eq 0 ] && update_mail
		#[ $((sec % 60 )) -eq 0 ] && update_bat

		# how often the display updates ( 5 seconds )
		[ $((sec % 5 )) -eq 0 ] && display
		sec=$((sec + 1))
	}
done 

